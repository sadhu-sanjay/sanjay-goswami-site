---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);

import proj1 from "~/assets/images/project/proj1.png";
import proj2 from "~/assets/images/project/proj2.png";
import proj3 from "~/assets/images/project/proj3.png";
import proj4 from "~/assets/images/project/proj4.png";
import proj5 from "~/assets/images/project/proj5.png";
import proj6 from "~/assets/images/project/proj6.png";

import video1 from "~/assets/videos/video1.mp4";
import video2 from "~/assets/videos/comp1.mp4";

import Card from "@components/Card.astro";

---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hello there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Sanjay Goswami</div>
    <div class="text-3xl py-3 font-bold">Sr. Software Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        Over the last 8 years I have build or oversaw the developement of around
        50 enterprice level Software Projects . for mobile, web and IOT
        platforms using technologies like html, css, python, javascript, swift,
        kotlin, mysql, GCP, AWS. etc.
      </text>
    </div>
    <div class="mt-8">
      <a
        class="btn btn-outline"
        href="https://twitter.com/sanjaygoswami60"
        target="_blank"
      >
        Let's connect!</a
      >
      <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn btn-outline ml-5">
        Set up a meeting 
      </a>
    </div>
  </div>

  <div role="tablist" class="tabs tabs-lg tabs-lifted tabs-bordered">
    <input
      type="radio"
      name="my_tabs_2"
      role="tab"
      class="tab"
      aria-label="Frontend"
      checked="checked"
    />
    <div
      role="tabpanel"
      class="tab-content bg-base-100 border-base-300 rounded-box p-6"
    >
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:grid-cols-3">
        <Card
          title="Smoke simulation"
          video={video1}
          desc="Animation done for a online canabis store loading screen. The animation using pure css and javascript"
          url="https://fluid-sim.web.app"
          badge="NEW"
          tags={["CSS", "JS", "Animation"]}
        />

        <Card
          title="Chicane Inc. Landing Page"
          video={video2}
          desc="The Computer one is a CPU case built by Teenage engineering. This here is my interpretation of how I would make a landing page If I were to seel this product."
          url="https://computer-one.web.app/"
          badge="NEW"
          tags={["React", "Tailwind", "Next.js"]}
        />

        <Card
          title="ArcadeVr - Arcade Software for VR Game Management Software."
          img={proj6}
          desc="Front-end  app for an Arcade VR setup. this app run's on a pc which connects to a vr headset. essential this is a font-end UI which helps user selects game while wearing VR headset"
          url="https://arcadevr.web.app"
          badge="NEW"
        />

        <Card
          title="Corbett National Safari Experience Booking website"
          img={proj5}
          desc="A Complete Tour booking website for Corbett National Park Safari"
          url="https://shicane.web.app/"
          badge=""
        />
      </div>
    </div>

    <input
      type="radio"
      name="my_tabs_2"
      role="tab"
      class="tab"
      aria-label="FullStack"
    />
    <div
      role="tabpanel"
      class="tab-content bg-base-100 border-base-300 rounded-box p-6"
    >

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:grid-cols-3">
      <Card
        title="Airmaps - Google Maps Records Visualization"
        img={proj1}
        desc="Airtable records visualization Using Custom Google maps. The maps data Gets updated everyday with the latest data from Airtable"
        url="https://demo.sanjaygoswami.online"
        badge="NEW"
      />

      <Card
        title="Itne Incorporated Business Dashboard"
        img={proj3}
        desc="A Custom Dashboard and saas work demo for Itne Inc. showcasing all Features that can be implemented on a fullstack app. From listing to creating to sending for approval to approving. "
        url="https://dynamic-table-xi.vercel.app/"
        badge="NEW"
      />

      <Card
        title="Dashboard Fresh Order - Build and Buy Custom Tshirts "
        img={proj4}
        desc="This was a landing page plus website i built for a Tshirt and clothing compnay. on this website you can customize and order your own custom design tshirts. This also includes a custom Tshirt Builder Built using konva."
        url="https://freshorder.web.app"
        badge=""
      />
        </div>

    </div>

    <input
      type="radio"
      name="my_tabs_2"
      role="tab"
      class="tab"
      aria-label="Mobile"
    />
    <div
      role="tabpanel"
      class="tab-content bg-base-100 border-base-300 rounded-box p-6"
    >
      Tab content 3
    </div>

    <input
      type="radio"
      name="my_tabs_2"
      role="tab"
      class="tab"
      aria-label="Hardware"
    />
    <div
      role="tabpanel"
      class="tab-content bg-base-100 border-base-300 rounded-box p-6"
    >
      Tab content 3
    </div>
  </div>

