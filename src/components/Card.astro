---
import { Image } from "astro:assets"
const {
  title,
  img,
  video,
  desc,
  url,
  badge,
  tags,
  target = "_blank",
} = Astro.props;
---

<div class="w-full">
  <a href={url} target={target}>
    <div
      class="card border rounded-lg overflow-clip bg-base-100 transition-scale duration-300 shadow-lg hover:shadow-xl hover:scale-105"
    >
      <div class="card-body">

        {img && <Image
        class="w-full rounded-lg aspect-video object-cover"
        format="webp"
        src={img}
        alt={title}
      />}

        {video && <video
          class="w-full mb-6 shadow-xl rounded-lg aspect-video object-cover"
          autoplay
          muted
          loop
        >
          <source src={video} type="video/mp4" />
        </video> }
        <h2 class="card-title text-base">
          {title}
          {badge && <div class="badge badge-secondary">{badge}</div>}
        </h2>
        <p class="text-gray-500 dark:text-gray-400">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
